{
  "name": "messagedb",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development npx fastify-cli start index.js -l debug -d -P -w --ignore-watch='node_modules .git'",
    "lint": "eslint --ext .js ./",
    "lint:fix": "eslint --ext .js --fix ./",
    "lint:lock": "lockfile-lint --path package-lock.json --type npm --allowed-hosts npm --allowed-schemes 'https:' 'file:'",
    "start": "NODE_ENV=production npx fastify-cli start index.js -l error",
    "test": "NODE_ENV=test node --test",
    "test:coverage": "NODE_ENV=test npx c8 npm run test"
  },
  "engines": {
    "node": ">=18.12.1",
    "npm": ">=9.1.1"
  },
  "author": "Gregory Daynes <email@gregdaynes.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.4.1",
    "desm": "^1.3.0",
    "env-schema": "^5.1.1",
    "fastify": "^4.9.2",
    "fastify-plugin": "^4.3.0",
    "fluent-json-schema": "^4.0.0",
    "knex": "^2.3.0",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "fastify-cli": "^5.6.0",
    "lockfile-lint": "^4.9.6",
    "pino-pretty": "^9.1.1",
    "standard": "^17.0.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-push": "npm run lint && npm run lint:lock"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "promise",
      "n"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "eqeqeq": [
        "warn"
      ],
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_"
        }
      ]
    }
  }
}
